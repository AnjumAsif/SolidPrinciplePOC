<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/margin_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/margin_all"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintVertical_bias="0.012">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  android:text="@string/title"
                  android:id="@+id/textView_status"
                  android:layout_marginStart="@dimen/margin_all"
                  android:layout_marginEnd="@dimen/margin_all"
                  app:layout_constraintBottom_toTopOf="@+id/textView_name"
                  android:padding="@dimen/margin_all"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_name"
                  app:layout_constraintBottom_toTopOf="@+id/textView_description"
                  android:text="@string/task_name"
                  android:layout_marginStart="@dimen/margin_all"
                  android:layout_marginEnd="@dimen/margin_all"
                  android:padding="@dimen/margin_all"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_description"
                  android:padding="@dimen/margin_all"
                  android:text="@string/length"
                  android:layout_marginStart="@dimen/margin_all"
                  android:layout_marginEnd="@dimen/margin_all"
                  app:layout_constraintTop_toBottomOf="@+id/textView_name"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_genere"
                android:padding="@dimen/margin_all"
                android:text="@string/genereations"
                android:layout_marginStart="@dimen/margin_all"
                android:layout_marginEnd="@dimen/margin_all"
                app:layout_constraintTop_toBottomOf="@+id/textView_description"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
